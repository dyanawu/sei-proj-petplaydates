<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <%= image_tag @user.profile.dp_url, class: 'img-fluid' %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.profile.birthday %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.profile.bio %>
</p>

<h5>Pets:</h5>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dp url</th>
      <th>Species</th>
      <th>Birthday</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.dp_url %></td>
        <td><%= pet.species.dispname %></td>
        <td><%= pet.birthday %></td>
        <td><%= pet.bio %></td>
        <td><%= link_to 'Show', pet %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h5>Events:</h5>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Capacity</th>
      <th>Location</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Min pets</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.events_attending.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.capacity %></td>
        <td><%= event.location %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.min_pets %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', users_path %>
