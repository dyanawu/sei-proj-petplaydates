<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.username %>
</p>

<p>
  <%= image_tag @user.profile.dp_url, class: 'img-fluid' %>

</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.profile.birthday %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.profile.bio %>
</p>

  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dp url</th>
      <th>Species</th>
      <th>Birthday</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.dp_url %></td>
        <td><%= pet.species.dispname %></td>
        <td><%= pet.birthday %></td>
        <td><%= pet.bio %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

