<!DOCTYPE html>
<html>
  <head>
    <title>pawdates</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">
  <%= stylesheet_link_tag 'owl.carousel.min.css', media: 'all' %>
  <%= stylesheet_link_tag 'owl.theme.default.min.css', media: 'all' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= favicon_link_tag asset_path('brand/favicon.ico') %>
  </head>
  <body>
    <%= render "layouts/navbar" %>
    <div class="sticky-offset">
        <p class="alert"><%= alert %></p>

        <%= yield %>
    </div>
    <%= javascript_include_tag "jquery-3.5.1.min.js" %>
    <%= javascript_include_tag "popper.min.js" %>
    <%= javascript_include_tag "bootstrap.bundle.min.js" %>
    <%= javascript_include_tag "owl.carousel.min.js" %>
        <script>
        $('.owl-carousel').owlCarousel({
        loop:true,
        margin:20,
        nav:true,
        responsive:{
            0:{
                items:1
            },
            600:{
                items:3
            },
            1000:{
                items:5
            }
        }
    })
    </script>
  </body>
  
</html>
