  <div class="card">
    <% if event.start_time < Time.now %>
    <div class="card-flag bg-danger text-white">in <%=event.time_left %>!</div>
    <% else %>
    <div class="card-flag bg-dark text-white">in <%=event.time_left %></div>
    <%end%>
    <img class="card-img-top" src="https://picsum.photos/300" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"> <%= link_to event.title, event_path(event) %> </h5>
      <p class="card-text">
      <strong>        <%="#{event.start_time.localtime.strftime("%I:%M %p")} at #{event.location}" %></strong>

        <br>Hosted by <%= link_to "@#{event.user.username}", user_path(event.user)%>
      </p>
    </div>
    <div class="card-footer">
      <small class="text-muted"><%= "#{event.pets.length} / #{event.capacity} participants" %></small>
    </div>
  </div>