  
  <div class="card mb-3">
  <div class="card-img-container">
          <%= image_tag pet.dp_url, :class=> "card-img-top"%>
    <div class="overlay">
        <div class="overlay-text">
            <p>
            <%= link_to(pet_path(pet), :class=>"text-light") do %>
            <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to(edit_pet_path(pet), :class=>"text-warning") do %>
            <i class="far fa-edit"></i>
            <% end %>
            <%= link_to(pet, method: :delete, :class=>"text-danger", data: { confirm: "Are you sure you want to remove #{pet.name} from your account?" }) do %>
            <i class="fas fa-trash-alt"></i>
            <% end %>

            </p>
        </div>
    </div>
    </div>
        <div class="card-body text-center">
            <h5 class="card-title"> <%= link_to pet.name, pet_path(pet) %><%= pet.gender_symbol %></h5>
        <p class="card-text"></p>
    </div>
  </div> 
 