<%= form_with(model: pet, local: true) do |form| %>
  <% if pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
        <% pet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="species-options" class="text-center mb-5">
        <% Species.all.each do |species| %>
            <%= radio_button_tag("pet[species_id]", species.id) %>
            <%= label_tag "pet_species_id_#{species.id}", image_tag("pets/#{species.name}.png") %>
    <% end %>
  </div>

  <div class="form-row">

    <div class="form-group col-md-6"">
      <%= form.label :name %>
      <%= form.text_field :name, :required => true, :class => "form-control"  %>
    </div>
      <div class="form-group col-md-6"">
      <%= form.label :dp_url, "Image" %>
      <%= form.text_field :dp_url, :required => true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-row">

    <div class="form-group col-md-6"">
      <%= form.label :birthday %>
      <%= form.date_select :birthday, {start_year: Date.today.year - 30, end_year: Date.today.year}, {:class=> "form-control"} %>
    </div>
  </div>
  <div class="form-row">

  <div class="form-group col-md-12">
    <%= form.label :bio %>
    <%= form.text_area :bio, :required => true, :class => "form-control" %>
  </div>
  </div>

  <div class="actions">
    <%= form.submit "Add Pet", :required => true, :class => "btn btn-success" %>
  </div>
<% end %>
