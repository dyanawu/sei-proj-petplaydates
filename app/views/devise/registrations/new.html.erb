<h2>Sign up for pawdates</h2>
        <p class="alert"><%= alert %></p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="row">

  <div class="col">
       <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", :class=>"form-control" %>
  </div>

</div>
<div class="row">

    <div class="col">
         <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control" %>
  </div>

</div>

<div class="row">

  <div class="col">
       <%= f.label :password %>

    <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control" %>
  </div>

    <div class="col">
          <%= f.label :password_confirmation %>
          
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control"  %>
  </div>

</div>

    <% if @minimum_password_length %>

    <div class="row">
    <div class="col">
        <em class="text-danger">(<%= @minimum_password_length %> characters minimum)</em>
    
    </div>
    </div>
    
    <% end %>
<div class="row">

  <div class="col">
      <%= f.submit "Sign up", :class=> 'btn btn-primary my-3' %>

  </div>

</div>

<% end %>

<%= render "devise/shared/links" %>
